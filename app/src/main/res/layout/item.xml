<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:elevation="4dp"
    app:cardCornerRadius="7dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/unit_id_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/brg_id_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lokasi_id_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tgl_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tgl" />

                <TextView
                    android:id="@+id/jam_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="jam item" />
            </LinearLayout>

            <TextView
                android:id="@+id/brg_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="item"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/unit_name_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="unitname" />

                <TextView
                    android:layout_marginLeft="16dp"
                    android:id="@+id/lokasi_name_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lokasi" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qty_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="38sp" />

            <TextView
                android:id="@+id/satuan_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="satuan"
                android:textSize="21sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
